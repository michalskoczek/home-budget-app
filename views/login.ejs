<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/style/register-login.css" />
   <%- include('includes/nav.ejs') %>
    </header>
    <main class="main-container row justify-content-center">
      <div class="form-container col col-lg-6">
        <form>
          <div class="form-group">
            <label for="email">Email address</label>
            <input
              type="email"
              class="form__input form-control"
              name="email"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="form__input form-control"
              name="password"
              required
            />
          </div>
          <button type="submit" class="form__signin-btn btn btn-success">
            Sign in
          </button>
          <small class="form__smallText form-text text-muted"
            >New? <a href="/register">Create an account.</a></small
          >
        </form>
      </div>
    </main>
<%- include('includes/scripts.ejs') %>
<%- include('includes/end.ejs') %>
