<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/style/register-login.css" />
   <%- include('includes/nav.ejs') %>
    </header>
    <% if (errorMessageFlash) { %>
      <div id="alert-message" class="container position-absolute">
        <div class="alert alert-warning row" role="alert">
          <%= errorMessageFlash %>
        </div>
      </div>
    <% } %>
    <% if (successfulMessageFlash) { %>
      <div id="alert-message" class="container position-absolute">
        <div class="alert alert-success row" role="alert">
          <%= successfulMessageFlash %>
        </div>
      </div>
    <% } %>
    <main class="main-container row justify-content-center">
      <div class="form-container col col-lg-6">
        <form action="/login" method="POST">
          <div class="form-group">
            <label for="email">Email address</label>
            <input
              type="email"
              class="form__input form-control"
              name="email"
              required
            />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="form__input form-control"
              name="password"
              required
            />
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          <button type="submit" class="form__signin-btn btn btn-success">
            Sign in
          </button>
          <small class="form__smallText form-text text-muted"
            >New? <a href="/register">Create an account.</a></small
          >
        </form>
      </div>
    </main>
    <% if (errorMessageFlash || successfulMessageFlash) { %>
      <%- include('includes/alert-message.ejs') %>
    <% } %> 
<%- include('includes/scripts.ejs') %>
<%- include('includes/end.ejs') %>
