<%- include('../includes/head.ejs') %>
<link rel="stylesheet" href="/style/budget-expense.css" />
   <%- include('../includes/nav.ejs') %>
    </header>
<main>
    <ul class="nav__item-list nav nav-tabs" id="myTab" role="tablist">
      <li class="nav__item nav-item" role="presentation">
        <a class="nav__item-link nav-link active" id="budget-tab" data-toggle="tab" href="#budget" role="tab" aria-controls="budget" aria-selected="true">Budget</a>
      </li>
       <li class="nav__item nav-item" role="presentation">
        <a class="nav__item-link nav-link" id="expenses-tab" data-toggle="tab" href="#expenses" role="tab" aria-controls="expenses" aria-selected="false">Expenses</a>
      </li>
    </ul>

    <div class="tab-content" id="myTabContent">
      <div class="tab-pane fade show active" id="budget" role="tabpanel" aria-labelledby="budget-tab">
        <form>
          <div class="form__container form-group">
            <label for="budget">Enter your budget</label>
            <input
              type="number"
              class="form__input form-control"
              name="budget"
              required
            />
          </div>
          <button type="submit" class="form__update-budget-btn btn btn-success">
            Update budget
          </button>
        </form>
      </div>

      <div class="tab-pane fade" id="expenses" role="tabpanel" aria-labelledby="expenses-tab">
        <form>
          <div class="form__container form-group">
            <label for="title">Enter title your expense</label>
            <input
              type="text"
              class="form__input form-control"
              name="title"
              required
            />
          </div>
          <div class="form__container form-group">
            <label for="amount">Enter amount your expense</label>
            <input
              type="number"
              class="form__input form-control"
              name="amount"
              required
            />
          </div>
          <button type="submit" class="form__add-expense-btn btn btn-danger">
            Add expense
          </button>
        </form>
      </div>
    </div>
</main>
<%- include('../includes/scripts.ejs') %>
<%- include('../includes/end.ejs') %>
